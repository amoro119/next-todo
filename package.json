{
  "name": "next-todo-desktop",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "concurrently \"npm:backend:up\" \"npm:write-server\" \"npm:next:dev\" ",
    "electron2:dev": "concurrently \"npm:backend:up\" \"npm:write-server\" \"npm:next:dev\" \"npm:electron:dev\"",
    "next:dev": "next dev -p 3000",
    "electron:dev": "wait-on http://localhost:3000 && electron .",
    "build": "npm run next:build && npm run prepare:electron && npm run electron:build",
    "next:build": "next build  --turbopack",
    "prepare:electron": "cp package.json .next/standalone/ && cp -R .next/static .next/standalone/.next/static && cp -R public .next/standalone/public && (cd .next/standalone && npm install --omit=dev)",
    "electron:build": "PYTHONPATH='' electron-builder",
    "start": "next start",
    "lint": "next lint",
    "backend:up": "docker compose up -d",
    "backend:down": "docker compose down",
    "db:migrate": "dotenv -e .env.local -- pg-migrations apply --directory ./db/migrations-server",
    "write-server": "dotenv -e .env.local -- tsx server.ts"
  },
  "build": {
    "appId": "com.example.next-todo-desktop",
    "productName": "Next Todo Desktop",
    "asar": false,
    "files": [
      "main.js",
      "server.ts",
      "public",
      ".next/standalone/**/*",
      ".next/static/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "@electric-sql/client": "^1.0.5",
    "@electric-sql/pglite": "^0.3.4",
    "@electric-sql/pglite-react": "^0.2.22",
    "@electric-sql/pglite-sync": "^0.3.7",
    "@electric-sql/react": "^1.0.5",
    "@hono/node-server": "^1.15.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dompurify": "^3.1.6",
    "electron-is-dev": "^3.0.1",
    "hono": "^4.8.4",
    "jsonwebtoken": "^9.0.2",
    "lodash.debounce": "^4.0.8",
    "marked": "^13.0.2",
    "next": "15.3.4",
    "portfinder": "^1.0.37",
    "postgres": "^3.4.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tree-kill": "^1.2.2",
    "uuid": "^11.1.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@databases/pg-migrations": "^5.0.3",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/cors": "^2.8.19",
    "@types/dompurify": "^3.0.5",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash.debounce": "^4.0.9",
    "@types/marked": "^6.0.0",
    "@types/node": "^20",
    "@types/pg": "^8.15.4",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^8.0.0",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "tailwindcss": "^4",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  }
}
